<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        {% block title %}
            {{ 'Best Pizzas Ever!' }}
        {% endblock %}
    </title>

    <link rel="icon" type="image/x-icon" href="{{ asset('pizza.ico') }}" />

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body class="bg-light">
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="content">
                    <h2 class="fw-light">{{ 'Best Pizzas Ever!' }}</h2>
                    <p class="lead text-muted">{{ 'We have pizzas that will make you happy...' }}</p>
                </div>
            </div>
        </div>
    </section>

    {% block body %}{% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
